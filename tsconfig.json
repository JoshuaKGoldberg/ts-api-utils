{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"outDir": "lib",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2021"
	},
	"include": ["src", "typings"]
}
